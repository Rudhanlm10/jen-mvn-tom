pipeline {
    agent any
	tools {
      maven 'mvn-home'
    }
    stages {
        stage('scm-checkout') {
            steps {
                git branch: 'main', credentialsId: 'git-credit', 
				url: 'https://github.com/Rudhanlm10/jen-mvn-tom.git'
            }
        }
        stage('mvn-goal') {
            steps {
                sh 'mvn clean compile test package'
            }
        }
        stage('tomcat deployment') {
            steps {
                sshagent(['ec2-user']) {
                    sh """
                        scp -o StrictHostKeyChecking=no target/jenkins-maven-19-02.war ec2-user@3.145.211.81:/opt/tomcat/webapps/
                        
                        ssh ec2-user@3.145.211.81 'sudo chown ec2-user:ec2-user -R /opt/tomcat/webapps/jenkins-maven-19-02'
                    """
                }
            }
        }
    }
}
